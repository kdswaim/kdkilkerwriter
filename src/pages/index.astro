---
import Layout from '../layouts/Layout.astro';
import TopMessage from '../components/TopMessage.astro';
import Footer from '../components/Footer.astro';
import Blog from '../components/Blog/Blog.astro';
---

<Layout title="PageLayout">
	<main>
	<div id="TopMessage-wrapper">
		<TopMessage />
	</div>
		<Blog />
	</main>
	<Footer />
</Layout>

<style>

	#TopMessage-wrapper {
		width: 100%;
		height: auto;
	}

	main {
		margin: 0;
		font-family: Georgia, 'Times New Roman', Times, serif;
		width: 100%;
		height: auto;
	}

	
</style>
